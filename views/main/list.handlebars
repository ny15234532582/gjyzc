<div class="listCon">
    <nav class="leftMenu">
        <a href="#">{{listTitle}}</a>
        <a href="/detail?path=栏目分类/公司简介/main">公司简介</a>
        <a href="/list?path=栏目分类/产品中心&page=1">产品中心</a>
        <a href="/list?path=栏目分类/项目案例&page=1">项目案例</a>
        <a href="/leaveMsg">在线留言</a>
        <a href="/detail?path=栏目分类/联系我们&page=1">联系我们</a>
    </nav>
    <div>
        <ul class="navCrum">
            <li><a href="/">首页</a></li>
            {{#each crum}}
            <li>{{.}}</li>
            {{/each}}
        </ul>
        <p class="line"></p>
        <ul class="titleList">
            {{#each allTitle}}
            <li>
                <span class="date">
                    <h1>{{date1}}</h1>
                    <h2>{{date2}}</h2>
                </span>
                <div class="artTitle">
                    <a href="{{path}}">{{title}}</a>
                    <p>
                        {{summary}}
                    </p>
                </div>
            </li>
            {{/each}}
        </ul>
        <ul class="pagelist">
            <li>共{{number}}条记录</li>
            {{#each allNum}}
            <li><a href="{{url}}">{{pageNum}}</a></li>
            {{/each}}
        </ul>
    </div>
</div>
